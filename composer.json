{
    "name": "cachethq/cachet",
    "description": "An open source status page system, for everyone.",
    "keywords": [
        "laravel",
        "cachet",
        "alt-three",
        "status",
        "page"
    ],
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Brooks",
            "email": "james@alt-three.com"
        },
        {
            "name": "Graham Campbell",
            "email": "graham@alt-three.com"
        },
        {
            "name": "Joseph Cohen",
            "email": "joe@alt-three.com"
        }
    ],
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-xml": "*",
        "alt-three/bus": "*",
        "alt-three/validator": "*",
        "aws/aws-sdk-php": "*",
        "bugsnag/bugsnag-laravel": "*",
        "cachethq/badger": "*",
        "chillerlan/php-qrcode": "*",
        "doctrine/dbal": "*",
        "fideloper/proxy": "*",
        "fruitcake/laravel-cors": "*",
        "graham-campbell/binput": "*",
        "graham-campbell/exceptions": "*",
        "laravel/socialite": "*",
        "graham-campbell/markdown": "*",
        "guzzlehttp/guzzle": "*",
        "jenssegers/date": "*",
        "laravel/framework": "*",
        "laravel/nexmo-notification-channel": "*",
        "laravel/tinker": "*",
        "league/commonmark": "*",
        "mccool/laravel-auto-presenter": "*",
        "nexmo/client": "*",
        "pragmarx/google2fa": "*",
        "predis/predis": "*",
        "twig/twig": "*"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "barryvdh/laravel-debugbar": "*",
        "barryvdh/laravel-ide-helper": "*",
        "filp/whoops": "*",
        "graham-campbell/analyzer": "*",
        "mockery/mockery": "*",
        "phpunit/phpunit": "*",
        "laravel/vonage-notification-channel": "*",
        "symfony/mailer": "*"
    },
    "suggest": {
        "ext-apc": "APC Support cache driver."
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "CachetHQ\\Cachet\\": "app/",
            "Tests\\": "tests/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CachetHQ\\Tests\\Cachet\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": [
            "@php artisan config:clear",
            "vendor/bin/phpunit"
        ],
        "test-coverage": [
            "@php artisan config:clear",
            "vendor/bin/phpunit --coverage-clover=coverage.xml"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
